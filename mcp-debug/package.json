{
  "name": "mcp-debug",
  "version": "0.1.0",
  "description": "Drop-in MCP proxy for automated stress tests, chaos injection, replay, and regression diffs for agent tool use",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "mcp-debug": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "ui": "cd ui && npm run dev",
    "ui:build": "cd ui && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "testing",
    "stress-testing",
    "ai-agents",
    "debugging"
  ],
  "author": "Neil Tripathi",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^12.6.0",
    "commander": "^12.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "openai": "^6.16.0",
    "uuid": "^9.0.0",
    "ws": "^8.19.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.18.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
